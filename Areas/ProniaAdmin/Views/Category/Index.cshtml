@model List<Category>

@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category Table</h4>
                        <a asp-action="create" class="btn btn-success">Create Category</a>
                        <p class="card-description">
                            Add class <code>.table-striped</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            no
                                        </th>
                                        <th>
                                            name
                                        </th>
                                        <th>
                                            Product Count
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Category category in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <p> @category.Name</p>
                                            </td>
                                            <td>
                                              <p>@category.Products.Count</p>
                                            </td>
                                            <td>
                                              <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-info">Update</a>
                                                <a asp-action="Delete" asp-route-id="@category.Id" class="brn brn-danger btn-info">Delete</a>
                                              <a class="btn btn-primary btn-info">Detail</a>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>