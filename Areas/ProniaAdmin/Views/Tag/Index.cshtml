@Model List<Size>

@{
    int no = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Colors</h4>
                        <a asp-action="create" class="btn btn-success">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Size size in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <p>@size.Name</p>
                                            </td>
                                            <td>
                                                <a class="btn btn-warning btn-info"><i class="mdi mdi-pencil-box-outline"></i></a>
                                                <a class="btn btn-danger btn-info"><i class="mdi mdi-delete-variant"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-book-open"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
